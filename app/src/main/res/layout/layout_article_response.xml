<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@drawable/adapter_responder_shape"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp">

        <TextView
            android:id="@+id/txv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="time"
            app:layout_constraintStart_toEndOf="@+id/txv_floor"
            app:layout_constraintTop_toBottomOf="@+id/txv_respond" />

        <TextView
            android:id="@+id/txv_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="floor"
            app:layout_constraintStart_toStartOf="@+id/txv_respond"
            app:layout_constraintTop_toBottomOf="@+id/txv_respond" />

        <TextView
            android:id="@+id/txv_respond"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="content"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/img_responder"
            app:layout_constraintTop_toBottomOf="@+id/txv_author" />

        <TextView
            android:id="@+id/txv_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="author"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_responder"
            app:layout_constraintTop_toTopOf="@+id/img_responder" />

        <ImageView
            android:id="@+id/img_responder"
            android:layout_width="78dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/user" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>