<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txv_conversation_local"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@color/local_message"
        android:gravity="right"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/img_local"
        app:layout_constraintEnd_toStartOf="@+id/img_local"
        app:layout_constraintTop_toTopOf="@+id/img_local" />

    <TextView
        android:id="@+id/txv_conversation_remote"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@color/remote_message"
        android:gravity="left"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/img_remote"
        app:layout_constraintStart_toEndOf="@+id/img_remote"
        app:layout_constraintTop_toTopOf="@+id/img_remote" />

    <ImageView
        android:id="@+id/img_local"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/google" />

    <ImageView
        android:id="@+id/img_remote"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/google" />
</androidx.constraintlayout.widget.ConstraintLayout>